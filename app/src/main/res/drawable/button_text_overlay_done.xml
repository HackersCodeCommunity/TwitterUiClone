<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/twitter_blue"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="21.0dip" />
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <corners android:radius="21.0dip" />
                    <solid android:color="@color/fleet_button_background_disabled" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="21.0dip" />
                    <solid android:color="@color/fleet_button_background_enabled" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>