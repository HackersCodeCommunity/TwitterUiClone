<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius_infinite" />
            <solid android:color="@color/gray_200" />
            <stroke android:width="@dimen/border_width_small" android:color="?abstractColorLightGray" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius_infinite" />
            <solid android:color="?abstractColorFadedGray" />
            <stroke android:width="@dimen/border_width_small" android:color="?abstractColorLightGray" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius_infinite" />
            <solid android:color="@color/clear" />
            <stroke android:width="@dimen/border_width_small" android:color="?abstractColorLightGray" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius_infinite" />
            <solid android:color="@color/twitter_blue" />
        </shape>
    </item>
</selector>