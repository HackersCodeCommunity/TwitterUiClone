<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <shape>
            <corners android:radius="@dimen/corner_radius_large" />
            <solid android:color="?coreColorButtonPressedFill" />
            <stroke android:width="@dimen/border_thickness" android:color="?coreColorBorder" />
        </shape>
    </item>
    <item android:state_activated="false">
        <shape>
            <corners android:radius="@dimen/corner_radius_large" />
            <solid android:color="?coreColorAppBackground" />
            <stroke android:width="@dimen/border_thickness" android:color="?coreColorBorder" />
        </shape>
    </item>
</selector>